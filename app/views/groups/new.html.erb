<link href="https://fonts.googleapis.com/css?family=Pacifico" rel="stylesheet">
<div class="body">
    <div class="pg">
        <div class="page-header">
            <div class="logo">
                <a href="/"><h1 style="margin-left: 10px;">Feast</h1></a>
            </div>
        </div>
    </div>

    <%= bootstrap_form_for(@group) do |f| %>
      <%= f.text_field :group_name, placeholder: "i.e. Fantastic Foodies", required: true %>
      <%= f.text_field :location, placeholder: "i.e. San Francisco", required: true %>
      <%= f.text_field :keyword, placeholder: "(Optional) Enter a search word. i.e. Vegetarian" %>
      <%= f.select :rating_filter, [["1 Star +" , 1], ["2 Star +", 2], ["3 Star +", 3], ["4 Star +", 4], ["5 Star", 5]], { label: "Filter by Rating" }, { class: "selectpicker" } %>
      <%= f.form_group :cost_filter do %>
          <%= f.check_box :cost_filter1, label: "$", inline: true, checked: true %>
          <%= f.check_box :cost_filter2, label: "$$", inline: true %>
          <%= f.check_box :cost_filter3, label: "$$$", inline: true %>
          <%= f.check_box :cost_filter4, label: "$$$$", inline: true %>
      <% end %>
      <%= f.submit "Submit", class: "submitButton"%>
    <% end %>

